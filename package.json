{
    "name": "easymarkdown",
    "displayName": "EasyMarkdown",
    "description": "A GUI to edit Markdown in Visual Studio Code",
    "version": "0.0.1",
    "publisher": "jaume-ferrarons",
    "repository": "https://github.com/jaume-ferrarons/easymarkdown.git",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.bold",
        "onCommand:extension.italics",
        "onCommand:extension.strikethrough",
        "onCommand:extension.link",
        "onCommand:extension.item"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.bold",
                "title": " Bold "
            },
            {
                "command": "extension.italics",
                "title": " Italics "
            },
            {
                "command": "extension.strikethrough",
                "title": " Strikethrough "
            },
            {
                "command": "extension.link",
                "title": " Link "
            },
            {
                "command": "extension.item",
                "title": " Item(s) "
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.bold",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.italics",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.strikethrough",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.link",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.item",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
